/* pages/goods/goods.wxss */
.goods{
  background-color: rgba(252, 199, 199, 0.644);
  font-size: 28rpx;
}
.search_container {
  position: fixed;
  left: 20rpx;
  top: 10rpx;
  display: flex;
  flex-direction: row;
  width: 650rpx;
  background-color: #fff;
  border-radius: 4px;
  padding-left: 20rpx;
  height: 70rpx;
  box-sizing: border-box;
  z-index: 99;
}
.search_input {
  margin-top: 10rpx;
  width:500rpx;
  height: 40rpx;
  font-size: 28rpx;
}
.search_btn {
  width: 150rpx;
  height: 70rpx;
  background-color: lightcoral;
  color: #fff;
  border-top-left-radius:0;
  border-bottom-left-radius:0;
}
.banner-swiper {
  height: 480rpx
}
.banner-image {
  width: 100%;
}
.categories {
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.cates-item {
  display: inline-block;
  padding: 0 24rpx;
  line-height: 84rpx;
  border-bottom: 4rpx solid transparent;
  
}
.category-name {
}
.cates-item.active {
  border-bottom: 4rpx solid red;  
}

.notice {
  font-size: 28rpx;
  color: #ED7D75;
  background-color: rgba(250, 207, 150, 0.671);
  height: 70rpx;
  line-height: 70rpx;
}
.notice-title {
  width: 150rpx;
  margin-left: 20rpx;
}
.notice-content {
  width: 580rpx;
  height: 70rpx;  
  float: right;
  white-space: nowrap;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.clearfix::after {
  display: block;
  content: '';
  clear: both
}
.clearfix {
  zoom: 1;
}
.coupon {
  margin-top: 20rpx;
  width: 100%;
  white-space: nowrap;
}
.coupon-item {
  font-size: 20rpx;
  color: #fff;
  width: 250rpx;
  margin-right: 10rpx;
  padding: 20rpx;
  background-color: #f1a83b;
  overflow: hidden;
  display: inline-block;
}
.coupon-item:first-of-type {
  margin-left: 10rpx;
}
.coupon-money {
  font-size: 28rpx;
}

.good-item {
  width: 45.5%;
  float: left;
  margin-left: 3%;
  margin-top: 20rpx;
  background-color: #fff;
  padding-bottom: 10rpx;
}
.good-pic {
  width: 100%;
  height: 350rpx;
  box-sizing: border-box;
}
.good-pic image {
  width: 100%;
  height: 100%;
}
.good-name {
  text-align: center;
  line-height: 56rpx;
}
.price {
  width:  70%;
  margin: 0 auto;
  font-size: 26rpx;
}
.price-now {
  color: #E65045;
}
.price-before {
  color: #898382;
  text-decoration: line-through;
}
.ellipsis {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}